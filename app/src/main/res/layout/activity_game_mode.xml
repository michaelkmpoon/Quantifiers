<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameMode">

    <ImageView
        android:id="@+id/class_mode"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="287dp"
        android:onClick="classicMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/classic"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="0"
        android:weightSum="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="2.5dp"
            android:layout_weight="1"
            android:layout_marginTop="48.49dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/high_scores_bar"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="38dp" />

        <ImageView
            android:id="@+id/high_scores"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:onClick="highScores"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/high_scores"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="2.5dp"
            android:layout_weight="1"
            android:layout_marginTop="21.495dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/high_scores_bar"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="38dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/crazy_mode"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="287dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="crazyMode"
        app:srcCompat="@drawable/crazy"
        tools:layout_editor_absoluteY="0dp" />

</LinearLayout>