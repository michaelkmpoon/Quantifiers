<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameMode">

    <ImageView
        android:id="@+id/class_mode"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="287dp"
        android:onClick="classicMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/classic_mode"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/high_scores"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="0"
        app:srcCompat="@drawable/high_scores" />

    <ImageView
        android:id="@+id/crazy_mode"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="287dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/crazy"
        tools:layout_editor_absoluteY="0dp" />

</LinearLayout>